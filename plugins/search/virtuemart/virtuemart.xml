<?xml version="1.0" encoding="utf-8"?>

<extension version="1.6" type="plugin" group="search">
	<name>plg_search_virtuemart</name>
	<author>P.Kohl - Studio42</author>
	<creationDate>Febuary 2010</creationDate>
	<copyright>Copyright (C) 2010 Virtuemart. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>contact@st42.fr</authorEmail>
	<authorUrl>www.virtuemart.net</authorUrl>
	<version>1.5</version>
	<description>Allows Searching of VirtueMart Component</description>
	<languages>
		<language tag="en-GB">en-GB.plg_search_virtuemart.ini</language>
		<language tag="fr-FR">fr-FR.plg_search_virtuemart.ini</language>
	</languages>
	<files>
		<filename plugin="virtuemart">virtuemart.php</filename>
		<filename>index.html</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="search_limit" type="text"
					size="5"
					default="50"
					label="Search Limit"
					description="Number of Search items to return"
				/>
			</fieldset>

		</fields>
	</config>
</extension>